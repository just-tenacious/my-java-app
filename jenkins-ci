

pipeline {
    agent any

    tools {
        jdk 'jdk-17'  
        maven 'Maven3'
    }

    triggers {
        githubPush()
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                withMaven(maven: 'Maven3') {
                    bat 'mvn clean compile'
                }
            }
        }

        stage('Test') {
            steps {
                withMaven(maven: 'Maven3') {
                    bat 'mvn test'
                }
            }
        }

        stage('Package') {
            steps {
                bat 'mvn package'
            }
        }
    }

    post {
        success {
            echo '✅ CI Passed: Build and Tests Successful'
        }
        failure {
            echo '❌ CI Failed: Check Build Logs'
        }
    }
}
